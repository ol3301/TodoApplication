<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:navigation="clr-namespace:Todo.Desktop.Shared.Navigation"
        xmlns:main="clr-namespace:Todo.Desktop.Pages.Main"
        xmlns:todoCommandPanel="clr-namespace:Todo.Desktop.Features.Todo.TodoCommandPanel"
        xmlns:modal="clr-namespace:Todo.Desktop.Shared.Modal"
        xmlns:addTodo="clr-namespace:Todo.Desktop.Features.Todo.AddTodo"
        xmlns:todoList="clr-namespace:Todo.Desktop.Features.Todo.TodoList"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
        x:Class="Todo.Desktop.Pages.Main.MainWindow"
        x:DataType="main:MainWindowViewModel"
        x:CompileBindings="True"
        Width="600"
        Height="500"
        Title="Todo.Desktop">
    
    <Window.DataTemplates>
        <DataTemplate DataType="{x:Type todoList:TodoListViewModel}">
            <todoList:TodoListView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type addTodo:AddTodoViewModel}">
            <addTodo:AddTodoView/>
        </DataTemplate>
    </Window.DataTemplates>
    
    <Grid>
        <Grid RowDefinitions="Auto,*">
            <todoCommandPanel:TodoCommandPanelView
                Grid.Row="0" 
                HorizontalContentAlignment="Center" 
                Margin="10" 
                DataContext="{Binding TodoCommandPanelViewModel}"/>
        
            <navigation:NavigationView Grid.Row="1"/>
        </Grid>
        
        <modal:ModalView/>
    </Grid>
</Window>