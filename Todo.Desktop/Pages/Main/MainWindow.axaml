<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:navigation="clr-namespace:Todo.Desktop.Shared.Navigation"
        xmlns:main="clr-namespace:Todo.Desktop.Pages.Main"
        xmlns:todoCommandPanel="clr-namespace:Todo.Desktop.Features.Todo.TodoCommandPanel"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
        x:Class="Todo.Desktop.Pages.Main.MainWindow"
        x:DataType="main:MainWindowViewModel"
        x:CompileBindings="True"
        Width="600"
        Height="500"
        Title="Todo.Desktop">
        
    <StackPanel>
        <todoCommandPanel:TodoCommandPanelView 
            HorizontalContentAlignment="Center"
            Margin="10" 
            DataContext="{Binding TodoCommandPanelViewModel}"/>
        
        <navigation:NavigationView DataContext="{Binding NavigationViewModel}" /> 
    </StackPanel>
</Window>