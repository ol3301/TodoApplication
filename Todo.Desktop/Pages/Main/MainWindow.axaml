<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:navigation="clr-namespace:Todo.Desktop.Shared.Navigation"
        xmlns:main="clr-namespace:Todo.Desktop.Pages.Main"
        xmlns:todoCommandPanel="clr-namespace:Todo.Desktop.Features.Todo.TodoCommandPanel"
        xmlns:modal="clr-namespace:Todo.Desktop.Shared.Modal"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
        x:Class="Todo.Desktop.Pages.Main.MainWindow"
        x:DataType="main:MainWindowViewModel"
        x:CompileBindings="True"
        Width="600"
        Height="500"
        Title="Todo.Desktop">
    
    <Grid>
        <Grid RowDefinitions="Auto,*">
            <todoCommandPanel:TodoCommandPanelView
                Grid.Row="0" 
                HorizontalContentAlignment="Center" 
                Margin="10" 
                DataContext="{Binding TodoCommandPanelViewModel}"/>
        
            <navigation:NavigationView Grid.Row="1" DataContext="{Binding NavigationViewModel}" /> 
        </Grid>
        
        <modal:ModalView IsVisible="{Binding IsModalVisible}" DataContext="{Binding ModalViewModel}"/>
    </Grid>
</Window>